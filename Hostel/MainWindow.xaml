<Window x:Class="Hostel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hostel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Book Room" Click="BookRoom_Click" />
        <Button Content="Check Out" Click="CheckOut_Click" />
        <TextBox Name="RoomStatusTextBox" Height="200" Width="500" Margin="0,10,300,224" TextChanged="RoomStatusTextBox_TextChanged" />
    </Grid>
</Window>

