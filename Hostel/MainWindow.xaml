<Window x:Class="HotelBooking.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hotel Booking System" Height="600" Width="900" Background="#f9f9f9">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Orientation="Horizontal" Background="#3f51b5" Height="60" VerticalAlignment="Top">
            <TextBlock Text="Hotel Booking System" FontSize="24" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" Margin="20,0"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Room Filters -->
            <StackPanel Grid.Column="0" Background="#e3f2fd" Padding="20" CornerRadius="8">
                <TextBlock Text="Find Your Room" FontSize="18" FontWeight="Bold" Foreground="#3f51b5" Margin="0,0,0,10"/>

                <!-- Room Type Dropdown -->
                <TextBlock Text="Room Type:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <ComboBox x:Name="RoomTypeComboBox" Height="30">
                    <ComboBoxItem Content="Single"/>
                    <ComboBoxItem Content="Double"/>
                    <ComboBoxItem Content="Suite"/>
                </ComboBox>

                <!-- Check-In Date -->
                <TextBlock Text="Check-In Date:" FontWeight="SemiBold" Margin="0,20,0,5"/>
                <DatePicker x:Name="CheckInDatePicker" Height="30"/>

                <!-- Check-Out Date -->
                <TextBlock Text="Check-Out Date:" FontWeight="SemiBold" Margin="0,20,0,5"/>
                <DatePicker x:Name="CheckOutDatePicker" Height="30"/>

                <!-- Search Button -->
                <Button Content="Search Rooms" Background="#3f51b5" Foreground="White" FontWeight="Bold" Height="40" Margin="0,30,0,0"/>
            </StackPanel>

            <!-- Right Panel - Available Rooms -->
            <StackPanel Grid.Column="1" Background="White" Padding="20" CornerRadius="8">
                <TextBlock Text="Available Rooms" FontSize="18" FontWeight="Bold" Foreground="#3f51b5" Margin="0,0,0,10"/>

                <!-- Room List -->
                <DataGrid x:Name="AvailableRoomsGrid" AutoGenerateColumns="False" CanUserAddRows="False" Height="400">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Room Number" Binding="{Binding Number}" Width="*"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="*"/>
                        <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="*"/>
                        <DataGridCheckBoxColumn Header="Occupied" Binding="{Binding IsOccupied}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Book Room Button -->
                <Button Content="Book Selected Room" Background="#4caf50" Foreground="White" FontWeight="Bold" Height="40" Margin="0,20,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
