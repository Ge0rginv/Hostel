<Window x:Class="Hostel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hostel"
        mc:Ignorable="d"
        Title="Система Бронирования Гостиницы" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock FontSize="18" FontWeight="Bold" Text="Бронирование и Выезд" />

            <TextBlock Margin="0,10,0,0" Text="Имя клиента:" />
            <TextBox x:Name="CustomerNameTextBox" Width="300" />

            <TextBlock Margin="0,10,0,0" Text="Тип номера:" />
            <ComboBox x:Name="RoomTypeComboBox" Width="300">
                <ComboBoxItem Content="Одноместный" />
                <ComboBoxItem Content="Двухместный" />
                <ComboBoxItem Content="Двухместный с диваном" />
                <ComboBoxItem Content="Полулюкс" />
                <ComboBoxItem Content="Люкс" />
            </ComboBox>

            <TextBlock Margin="0,10,0,0" Text="Дата заезда:" />
            <DatePicker x:Name="CheckInDatePicker" />

            <TextBlock Margin="0,10,0,0" Text="Дата выезда:" />
            <DatePicker x:Name="CheckOutDatePicker" />

            <Button Content="Забронировать" Width="100" Margin="0,10,0,0" Click="BookRoom_Click" />
            <Button Content="Выезд" Width="100" Margin="0,10,0,0" Click="CheckOut_Click" />

            <TextBlock Margin="0,10,0,0" Text="Статус номеров:" />
            <TextBox x:Name="RoomStatusTextBox" Height="200" Width="500" Margin="0,10,0,0" 
                     IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
        </StackPanel>
    </Grid>
</Window>
